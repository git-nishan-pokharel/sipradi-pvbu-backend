{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["apps/pvbu-backend/src/*"],
      "@app/aws": ["libs/aws/src"],
      "@app/aws/*": ["libs/aws/src/*"],
      "@app/filters": ["libs/filters/src"],
      "@app/filters/*": ["libs/filters/src/*"],
      "@app/email-templates": ["libs/email-templates/src"],
      "@app/email-templates/*": ["libs/email-templates/src/*"],
      "@app/wallet-core": ["libs/wallet-core/src"],
      "@app/wallet-core/*": ["libs/wallet-core/src/*"],
      "@app/interceptors": ["libs/interceptors/src"],
      "@app/interceptors/*": ["libs/interceptors/src/*"],
      "@app/decorators": ["libs/decorators/src"],
      "@app/decorators/*": ["libs/decorators/src/*"],
      "@app/utils": ["libs/utils/src"],
      "@app/utils/*": ["libs/utils/src/*"],
      "@app/dtos": ["libs/dtos/src"],
      "@app/dtos/*": ["libs/dtos/src/*"],
      "@app/base-services": ["libs/base-services/src"],
      "@app/base-services/*": ["libs/base-services/src/*"],
      "@app/sparrow-sms": ["libs/sparrow-sms/src"],
      "@app/sparrow-sms/*": ["libs/sparrow-sms/src/*"],
      "@app/prisma": ["libs/prisma/src"],
      "@app/prisma/*": ["libs/prisma/src/*"],
      "@app/pagination": ["libs/pagination/src"],
      "@app/pagination/*": ["libs/pagination/src/*"],
      "@app/gpssewa": ["libs/gpssewa/src"],
      "@app/gpssewa/*": ["libs/gpssewa/src/*"],
      "@app/set4npl": ["libs/set4npl/src"],
      "@app/set4npl/*": ["libs/set4npl/src/*"],
      "@app/firebase": ["libs/firebase/src"],
      "@app/firebase/*": ["libs/firebase/src/*"],
      "@app/notifications": ["libs/notifications/src"],
      "@app/notifications/*": ["libs/notifications/src/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false
  }
}
